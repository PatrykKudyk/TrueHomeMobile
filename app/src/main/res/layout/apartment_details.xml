<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBaseBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apartment_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/josefinsansbold"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="36sp" />

            <View
                android:id="@+id/apartment_details_top_line"
                android:layout_width="185dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="6dp"
                android:background="@color/colorPrimaryDark" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/images_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="182dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/apartment_details_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/josefinsansbold"
                android:gravity="center"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/apartment_details_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/josefinsanslight"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/apartment_details_zip_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:gravity="center"
                android:textSize="30sp" />

            <View
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="6dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@id/description_text_view_logged"
                app:layout_constraintTop_toBottomOf="parent" />

            <TextView
                android:id="@+id/apartment_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/josefinsanssemibold"
                android:gravity="center"
                android:textSize="26sp" />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>