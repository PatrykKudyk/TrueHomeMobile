<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.account.EditUserInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBaseBackground">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center|top"
            android:orientation="vertical">


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/logoImageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/icon" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/registration_card_view"
                        android:layout_width="350dp"
                        android:layout_height="780dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="16dp"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:cardBackgroundColor="@color/colorLayoutBackgroundLightPurple"
                        app:cardCornerRadius="20dp"
                        app:strokeColor="@color/colorPrimaryDark"
                        app:strokeWidth="2dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_first_name_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_first_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_name"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_last_name_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_first_name_layout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_last_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_last_name"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_username_field_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_last_name_layout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_username"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />


                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_email_field_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_username_field_layout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_email"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_age_field_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_email_field_layout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_age"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_age"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_street_field_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_age_field_layout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_street"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_street"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_street_number_field_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_street_field_layout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_street_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_street_number"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_edit_phone_number_field_layout"
                                style="@style/TextInputLayout.OutlineBox.CustomFont"
                                android:layout_width="320dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                app:boxStrokeColor="@color/colorPrimaryDark"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.495"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_street_number_field_layout">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_edit_phone_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/hint_phone_number"
                                    android:inputType="textLongMessage"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="18sp" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <Button
                                android:id="@+id/save_changes_button"
                                style="@style/Widget.AppCompat.Button.Borderless"
                                android:layout_width="320dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/dark_purple_button_background"
                                android:fontFamily="@font/josefinsansbold"
                                android:text="@string/button_save_changes"
                                android:textAllCaps="false"
                                android:textColor="@color/colorBaseBackground"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/user_edit_phone_number_field_layout" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


            </ScrollView>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>